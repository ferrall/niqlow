Version := OxMetrics7
PC := TRUE
ifeq ($(PC),TRUE)
	OX := "C:\Program Files (x86)\$(Version)\Ox\bin\oxl.exe"
	OXFLAGS := -DOX7
	COPY := copy
	OXDOC := %OxDocRun%
	OXDOC := C:\Program Files (x86)\oxdoc\bin\oxdoc.bat
	SED := "C:\Program Files (x86)\GnuWin32\bin\sed.exe"
	ERASE := erase
	INC := ..\..\include
	DOC := ../../docs/DDP
else
	OX := /home/ferrallc/bin/$(Version)/ox/bin64/oxl
	OXFLAGS := -DMPI  -DOX7
	COPY := cp
	ERASE := rm
	INC := ../../include
	DOC := ../../docs/DDP
endif

vpath %.ox .
vpath %.h $(INC)
vpath %.oxo $(INC)
vpath %.ox.html $(DOC)

.PHONY : document
document:
	$(OXDOC) -include $(INC) -uplevel Shared.ox
	${MAKE} -C $(DOC) tweak	
